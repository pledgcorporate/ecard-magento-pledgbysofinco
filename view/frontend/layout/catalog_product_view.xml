<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.price">
            <block class="Pledg\PledgPaymentGateway\Block\Product\Widget"
                template="Pledg_PledgPaymentGateway::widget/container.phtml"
                name="product.price.pledgwidget"
                after="product.price.final">
                <arguments>
                    <argument name="widgetType" xsi:type="string">product</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
